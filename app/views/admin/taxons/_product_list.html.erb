<h3>Sort products in this category by dragging:</h3>
<ul id="products_ul">
<% @taxon.product_taxons.all(:include => 'product', :conditions => 'products.deleted_at IS NULL').each do |pt| %>
  <li id="product_taxons_<%=pt.id%>">
   <span class="handle">â‰¡</span>
   <%= h pt.product.name %>
  </li>
<% end %>
</ul>


<% content_for :head do %>
  <script type="text/javascript">
    jQuery(document).ready(function(){
      $('#products_ul').sortable(
        { items:'li',
          containment:'parent',
          axis:'y',
          handle:'.handle',
          update: function(){
            $.post('/admin/taxons/<%=@taxon.id%>/reorder_products',
                   '_method=put&'+$(this).sortable('serialize'))
          }
        }
      )
    });
  </script>

  <style type="text/css">
    ul#products_ul {
      list-type: none;
      margin-left: 20px;
      border: 1px solid #CCC;
    }

    ul#products_ul li {
      border: 1px solid #DDD;
      background-color: #F9F9F9;
      list-style: none;
      margin-left: 0;
      padding: 3px;
    }
  
    #products_ul li .handle {
      display: inline-block;
      color: silver;
      width: 1.5em;
      cursor: row-resize;
      text-align: center;
    }
  </style>

<% end %>
